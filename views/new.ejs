<% include ./partials/header %>


<div class="container">
    <h1 style="text-align: center;">Add new Camp</h1>
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label>Campground Name</label>
            <input type="text" class="form-control" name="campground[name]">
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input type="text" class="form-control" name="campground[image]">
        </div>
         <div class="form-group">
            <label>Campground Description</label>
            <input type="text" class="form-control" name="campground[description]">
        </div>
        <div class="form-group align: center">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form
</div>
<% include ./partials/footer %>